{
  "pkg": {
    "hooks": "pkg/hooks.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "{{nginx.config_dir}}/${name}.conf": "pkg/nginx.conf",
      "/etc/nginx/config.d/${name}.conf": "--delete--"
    },
    "depends": {
      "nginx-mainline": ">=1.21.4"
    }
  },
  "template": {
    "properties": {
      "nginx": { "config_dir" : "/etc/nginx/sites/common" }
    },
    "usedBy": [
      "konsumation/konsum"
    ]
  }
}
