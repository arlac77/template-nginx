{
  "pkg": {
    "hooks": "pkg/hooks.sh",
    "content": {
      "{{nginx.config_dir}}${name}.conf": "pkg/nginx.conf"
    },
    "depends": {
      "nginx-mainline": ">=1.21.4"
    }
  },
  "template": {
    "properties": {
      "nginx": { "config_dir" : "/etc/nginx/sites/common/" }
    },
    "usedBy": [
      "konsumation/konsum",
      "arlac77/npm-dep-graph",
      "arlac77/template-kronos-app",
      "arlac77/template-web-app"
    ]
  }
}
